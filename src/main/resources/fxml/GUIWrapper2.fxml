                              <SVGPath fx:id="svgTitelbarMinimize" content="M40,60 C42,48 44,30 25,32" styleClass="titelBarButtonIcon" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnTitelbarRestore" styleClass="titelbarButton">
