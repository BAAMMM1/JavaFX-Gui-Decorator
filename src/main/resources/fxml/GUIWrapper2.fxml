                              <SVGPath fx:id="svgTitelbarRestore" content="M40,60 C42,48 44,30 25,32" styleClass="titelBarButtonIcon" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnTitelbarClose" styleClass="titelbarButton">
                           <graphic>
                              <SVGPath fx:id="svgTitelbarClose" content="M40,60 C42,48 44,30 25,32" styleClass="titelBarButtonIcon" />
                           </graphic>
